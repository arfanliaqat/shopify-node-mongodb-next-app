{
  "name": "shopify-node-mongodb-next-app",
  "version": "0.0.12",
  "description": "Shopify Boilerplate Code written in Next, Node, MongoDB and GraphQL",
  "main": "server.js",
  "scripts": {
    "update":"ncu -u",
    "update:check": "ncu",
    "lint": "next lint",
    "tunnel": "lt --port 8081",
    "dev": "rm -rf .next && node server.js",
    "build": "rm -rf .next && NEXT_TELEMETRY_DISABLED=1 next build",
    "start": "npm run build && NODE_ENV=production node server.js"
  },
  "author": {
    "name": "Harshdeep Singh Hura",
    "url": "https://harshdeephura.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kinngh/shopify-node-mongodb-next-app.git"
  },
  "dependencies": {
    "@shopify/app-bridge": "^2.0.3",
    "@shopify/app-bridge-react": "^2.0.3",
    "@shopify/app-bridge-utils": "^2.0.3",
    "@shopify/koa-shopify-auth": "^4.1.4",
    "@shopify/koa-shopify-webhooks": "^4.0.0",
    "@shopify/polaris": "^6.6.0",
    "apollo-boost": "^0.4.9",
    "cryptr": "^6.0.2",
    "dotenv": "^10.0.0",
    "graphql": "^15.5.1",
    "graphql-tag": "^2.12.5",
    "isomorphic-fetch": "^3.0.0",
    "koa": "^2.13.1",
    "koa-combine-routers": "^4.0.2",
    "koa-router": "^10.0.0",
    "koa-session": "^6.2.0",
    "mongoose": "^5.13.7",
    "next": "^11.1.0",
    "react": "^17.0.2",
    "react-apollo": "^3.1.5",
    "react-dom": "^17.0.2",
    "store-js": "^2.0.4",
    "webpack": "^5.51.1"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-next": "^11.1.0",
    "localtunnel": "^2.0.1",
    "npm-check-updates": "^11.8.3"
  }
}
